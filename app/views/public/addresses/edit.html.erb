<div class="container px-md-0">
  <div class="row">
    <div class="col-md-4">
      <h5 class="text-center"><span class="bg-light">配送先編集</span></h5>
    </div>
  </div>

  <div class="row">
    <div class="col-md-10s">
      <table class="table  table-borderless">
        <tbody>
          <%= form_with model:@address,url:address_path,method: :patch,local:true do |f| %>
    　     <tr>
          　<td><%= f.label :postal_code,"郵便番号(ハイフンなし)" %></td>
          　<td><%= f.text_field :postal_code, autocomplete: "postal_code", placeholder: "0000000", size: "25" %></td>
          　<td></td>
          </tr>

    　     <tr>
          　<td><%= f.label :address,"住所" %></td>
          　<td><%= f.text_field :address, autocomplete: "address", placeholder: "東京都渋谷区代々木神園町0-0", size: "80" %></td>
          　<td></td>
          </tr>

          <tr>
            <td><%= f.label :name,"宛名" %></td>
            <td><%= f.text_field :name, placeholder: "令和道子", size: "25" %></td>
            <td><%= f.submit "変更内容を保存",class:"btn btn-success" %></td>
          </tr>

          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
