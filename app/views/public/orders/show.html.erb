<div class="container px-md-0">
  <div class="row">
    <div class="col-md-4">
      <h5 class="text-center"><span class="bg-light">注文履歴詳細</span></h5>
    </div>
  </div><br>

  <div class="row">
    <div class="col-md-7">
      <h6 class="font-weight-bold">注文情報</h6>

      <table class="table table-bordered">
        <tbody>
          <tr>
            <th class="bg-light">注文日</th>
            <td><%= @order.created_at.strftime('%Y/%m/%d') %></td>
          </tr>
          <tr>
            <th class="bg-light align-middle">配送先</th>
            <td class="align-middle">
              〒<%= @order.postal_code %><br>
              <%= @order.address %><br>
              <%= @order.name %>
            </td>
          </tr>
          <tr>
            <th class="bg-light">支払方法</th>
            <td><%= @order.payment_method_i18n %></td>
          </tr>
          <tr>
            <th class="bg-light">ステータス</th>
            <td><%= @order.status_i18n  %></td>
          </tr>
        </tbody>
      </table>
    </div>

    <div class="col-md-3">
      <h6 class="font-weight-bold">請求情報</h6>

      <table class="table table-bordered">
        <tbody>
          <tr>
            <th class="bg-light">商品合計</th>
            <td><%= @sum.to_s(:delimited) %></td>
          </tr>
          <tr>
            <th class="bg-light">配送料</th>
            <td><%= @order.shipping_cost %></td>
          </tr>
          <tr>
            <th class="bg-light">ご請求額</th>
            <td><%= @order.total_payment.to_s(:delimited) %></td>
          </tr>
        </tbody>
      </table>
    </div>
  </div>

　<div class="row">
    <div class="col-md-8">
      <h6 class="font-weight-bold">注文内容</h6>

      <table class="table table-bordered">
        <thead class="bg-light">
          <tr>
            <th>商品</th>
            <th>単価(税込)</th>
            <th>個数</th>
            <th>小計</th>
          </tr>
        </thead>

        <tbody>
          <% @order_details.each do |order_detail| %>
          <tr>
            <td class="align-middle"><%= order_detail.item.name %></td>
            <td class="align-middle"><%= order_detail.price %></td>
            <td class="align-middle"><%= order_detail.amount %></td>
            <td class="align-middle"><%= order_detail.subtotal %></td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>