<div class="container px-md-0">
  <div class="row">
    <div class="col-md-4">
      <h5 class="text-center"><span class="bg-light">注文履歴一覧</span></h5>
    </div>
  </div>

　<div class="row">
    <div class="col-md-12">
      <table class="table table-bordered">
        <thead class="bg-light">
          <tr>
            <th>注文日</th>
            <th>配送先</th>
            <th>注文商品</th>
            <th>支払金額</th>
            <th>ステータス</th>
            <th>注文詳細</th>
          </tr>
        </thead>

        <tbody>
          <% @orders.each do |order| %>
          <tr>
            <td class="align-middle">
              <%= order.created_at.strftime('%Y/%m/%d') %>
            </td>
            <td class="align-middle">
              〒<%= order.postal_code %><br>
              <%= order.address %><br>
              <%= order.name %>
  　         </td>
            <td class="align-middle">
              <% order.order_details.each do |order_detail| %>
              　<%= order_detail.item.name %><br>
              <% end %>
            </td>
            <td class="align-middle"><%= order.total_payment.to_s(:delimited) %>円</td>
            <td class="align-middle"><%= order.status_i18n  %></td>
            <td class="align-middle">
              <%= link_to '表示する',order_path(order.id),method: :get,class:"btn btn-primary" %>
            </td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div><br>
</div>
