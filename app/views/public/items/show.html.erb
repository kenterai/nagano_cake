<div class="container px-md-0">
  <div class="row">
    <div class="col-md-2">
      <table class="table table-borderless border">
        <thead class="border-bottom">
          <tr>
            <th colspan="2"><div class="text-center">ジャンル検索</div></th>
          </tr>
        </thead>
        <tbody>
       　 <% @genres.each do |genre| %>
          <tr>
            <td><%= genre.name %></td>
            <td></td>
          </tr>
        <% end %>
        </tbody>
      </table>
    </div>

    <div class="col-md-4"><br>
      <%= image_tag @item.get_image("300x250") %>
    </div>

    <div class="col-md-6">
    　<h4 class="font-weight-bold"><%= @item.name %></h4>

    　<p><%= @item.introduction %></p><br><br>

    　<h4 class="d-inline-block"><%= "¥#{@item.add_tax_price.to_s(:delimited)}" %></h4>

    　<span>(税込)</span><br>

    　<%= form_with model:@cart_item,url:cart_items_path,method: :post,local:true do |f| %>
    　　<%= f.select :amount, *[1..9],  { include_blank: '個数選択　　'} %>
    　　<%= f.hidden_field :item_id, :value => @item.id %>
    　　<%= f.submit "カートに入れる",class:"btn btn-success" %>
    　<% end %>
  　</div>
  </div>
</div>

