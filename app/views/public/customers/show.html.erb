<div class="container px-md-0">
  <div class="row">
    <div class="col-md-4">
      <h5 class="text-center"><span class="bg-light">マイページ</span></h5>
    </div>
  </div><br>

  <div class="row">
    <h5 class="ml-3 d-flex align-items-end font-weight-bold">登録情報</h5>
    <%= link_to '　編集する　',edit_customers_path,class:"btn btn-success ml-4" %>
  </div>

  <div class="row">
    <div class="col-md-9">
      <table class="table border mb-0">
        <tbody>
          <tr>
            <td class="bg-light">氏名</td>
            <td><%= @customer.last_name %>　<%= @customer.first_name %></td>
          </tr>

          <tr>
            <td class="bg-light">カナ</td>
            <td><%= @customer.last_name_kana %>　<%= @customer.first_name_kana %></td>
          </tr>

          <tr>
            <td class="bg-light">郵便番号</td>
            <td><%= @customer.postal_code %></td>
          </tr>

          <tr>
            <td class="bg-light">住所</td>
            <td><%= @customer.address %></td>
          </tr>

          <tr>
            <td class="bg-light">電話番号</td>
            <td><%= @customer.telephone_number %></td>
          </tr>

          <tr>
            <td class="bg-light">メールアドレス</td>
            <td><%= @customer.email %></td>
          </tr>
        </tbody>
  　　　</table>
  　</div>
　</div>

　<div class="row">
    <h5 class="ml-3 d-flex align-items-end font-weight-bold">配送先　</h5>
    <%= link_to '　一覧を見る　',addresses_path(@customer.id),class:"btn btn-primary ml-4" %>
  </div><br>

  <div class="row">
    <h5 class="ml-3 d-flex align-items-end font-weight-bold">注文履歴</h5>
    <%= link_to '　一覧を見る　',orders_path(@customer.id),class:"btn btn-primary ml-4" %>
  </div>


</div>

