<div class="container px-md-0">
  <div class="row">
    <div class="col-md-4">
      <h5 class="text-center"><span class="bg-light">会員情報編集</span></h5>
    </div>
  </div>

  <div class="row">
    <div class="col-md-9">
      <%= form_with model:@customer,url:customers_path,method: :patch,local:true do |f| %>
      <table class="table table-borderless">
        <tbody>
          <tr>
            <td><%= f.label :name,"氏名" %></td>
            <td><%= f.text_field :last_name, autofocus: true %></td>
            <td><%= f.text_field :first_name %></td>
            <td></td>
          </tr>

          <tr>
            <td><%= f.label :name,"フリガナ" %></td>
            <td><%= f.text_field :last_name_kana %></td>
            <td><%= f.text_field :first_name_kana %></td>
            <td></td>
          </tr>

    　     <tr>
          　<td><%= f.label :postal_code,"郵便番号" %></td>
          　<td><%= f.text_field :postal_code, autocomplete: "postal_code" %></td>
          　<td></td>
          　<td></td>
          </tr>

    　     <tr>
          　<td><%= f.label :address,"住所" %></td>
          　<td colspan="3"><%= f.text_field :address, autocomplete: "address", size: "70" %></td>
          </tr>

    　     <tr>
          　<td><%= f.label :telephone_number,"電話番号" %></td>
          　<td><%= f.telephone_field :telephone_number, autocomplete: "telephone_number" %></td>
          　<td></td>
          　<td></td>
          </tr>

    　     <tr>
          　<td><%= f.label :email,"メールアドレス" %></td>
          　<td><%= f.email_field :email, autocomplete: "email" %></td>
          　<td></td>
          　<td></td>
          </tr>

           <tr>
            <td></td>
            <td colspan="2">
            <%= f.submit "　　　編集内容を保存　　　",class:"btn btn-success" %>　　　　　　　　　　　　
　　　　　　<%= link_to '　退会する　',customers_quit_path,class:"btn btn-danger" %></td>
            </td>
          </tr>
        </tbody>
  　　　</table>
  　　<% end %>
  　</div>
　</div>
</div>