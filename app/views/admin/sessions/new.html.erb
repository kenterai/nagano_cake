<div class="container px-md-0">
  <div class="row">
    <div class="col-md-4">
      <h5 class="text-center"><span class="bg-light">管理者ログイン</span></h5>
    </div>
  </div>
  
  <div class="row">
    <div class="col-md-10 offset-md-2">
      <table class="table table-borderless">
        <tbody>
          <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    　     <tr>
          　<td><%= f.label :email,"メールアドレス" %></td>
          　<td ><%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "sample@example.com", size: 40 %></td>
          </tr>
      
    　     <tr>
            <td><%= f.label :password,"パスワード" %></td>
            <td><%= f.password_field :password, autocomplete: "current-password", size: 40 %></td>
          </tr>
      
           <tr>
            <td></td> 
            <td><%= f.submit "ログイン",class:"btn btn-primary" %></td>
          </tr>
          <% end %>
        </tbody>
  　</table>
  </div>
</div>