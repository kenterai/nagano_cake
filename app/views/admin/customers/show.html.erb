<div class="container px-md-0">
  <div class="row">
    <div class="col-md-4">
      <h5 class="text-center"><span class="bg-light"><%= @customer.last_name %><%= @customer.first_name %>さんの会員詳細</span></h5>
    </div>
  </div>

  <div class="row">
    <div class="col-md-9">
      <table class="table table-borderless">
        <tbody>
          <tr>
            <td>会員ID</td>
            <td><%= @customer.id %></td>
          </tr>
          
          <tr>
            <td>氏名</td>
            <td><%= @customer.last_name %>　<%= @customer.first_name %></td>
          </tr>
          
          <tr>
            <td>フリガナ</td>
            <td><%= @customer.last_name_kana %>　<%= @customer.first_name_kana %></td>
          </tr>

          <tr>
            <td>郵便番号</td>
            <td><%= @customer.postal_code %></td>
          </tr>
          
          <tr>
            <td>住所</td>
            <td><%= @customer.address %></td>
          </tr>

          <tr>
            <td>電話番号</td>
            <td><%= @customer.telephone_number %></td>
          </tr>

          <tr>
            <td>メールアドレス</td>
            <td><%= @customer.email %></td>
          </tr>

          <tr>
            <td>会員ステータス</td>
            <th class=<%= is_deleted_color(@customer) %> ><%= @customer.is_deleted ? '退会':'有効' %></th>
          </tr>
          
          <tr>
            <td></td>
            <td><%= link_to '編集する',edit_admin_customer_path(@customer.id),class:"btn btn-success" %></td>
          </tr>
        </tbody>
  　　　</table>
  　</div>
　</div>
</div>

