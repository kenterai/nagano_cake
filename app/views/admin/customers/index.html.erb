<div class="container px-md-0">
  <div class="row">
    <div class="col-md-4">
      <h5 class="text-center"><span class="bg-light">会員一覧</span></h5>
    </div>
  </div><br>
  
  <div class="row">
    <div class="col-md-2">
    </div>
    
    <div class="col-md-8">
      <table class="table">
        <thead class="bg-light">
          <tr>
            <th>会員ID</th>
            <th>氏名</th>
            <th>メールアドレス</th>
            <th>ステータス</th>
          </tr>
        </thead>
        
        <tbody>
          <% @customers.each do |customer| %>
          <tr>
            <td><%= customer.id %></td>
            <td>
            <%= link_to admin_customer_path(customer.id),class:"text-dark border-bottom border-dark" do %>
              <%= customer.last_name %><%= customer.first_name %>
            <% end %>
            </td>
            <td><%= customer.email %></td>
            <th class=<%= is_deleted_color(customer) %> ><%= customer.is_deleted ? '退会':'有効' %></th>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>