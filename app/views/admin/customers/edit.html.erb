<div class="container px-md-0">
  <div class="row">
    <div class="col-md-4">
      <h5 class="text-center"><span class="bg-light"><%= @customer.last_name %><%= @customer.first_name %>さんの会員情報編集</span></h5>
    </div>  
  </div>
  
  <div class="row">
    <div class="col-md-9">
      <table class="table table-borderless">
        <tbody>
          <%= form_with model:@customer,url:admin_customer_path,method: :patch,local:true do |f| %>
          <tr>
            <td>会員ID</td>
            <td><%= @customer.id %></td>
            <td></td>
          </tr>
          
          <tr>
            <td><%= f.label :name,"名前" %></td>
            <td><%= f.text_field :last_name, autofocus: true %></td>
            <td><%= f.text_field :first_name %></td>
          </tr>

          <tr>
            <td><%= f.label :name,"フリガナ" %></td>
            <td><%= f.text_field :last_name_kana %></td>
            <td><%= f.text_field :first_name_kana %></td>
          </tr>
          
    　     <tr>
          　<td><%= f.label :postal_code,"郵便番号" %></td>
          　<td><%= f.text_field :postal_code, autocomplete: "postal_code" %></td>
          　<td></td>
          </tr>
          
    　     <tr>
          　<td><%= f.label :address,"住所" %></td>
          　<td colspan="2"><%= f.text_field :address, autocomplete: "address", size: "70" %></td>
          </tr>
      
    　     <tr>
          　<td><%= f.label :telephone_number,"電話番号" %></td>
          　<td><%= f.telephone_field :telephone_number, autocomplete: "telephone_number" %></td>
          　<td></td>
          </tr>
      
    　     <tr>
          　<td><%= f.label :email,"メールアドレス" %></td>
          　<td><%= f.email_field :email, autocomplete: "email" %></td>
          　<td></td>
          </tr>
          
          <tr>
            <td>会員ステータス</td>
            <td>
              <%= f.radio_button :is_deleted, 'false' %>
              <%= f.label :is_deleted, '有効', value: false %>　
              <%= f.radio_button :is_deleted, 'true' %>
              <%= f.label :is_deleted, '退会', value: true %>
            </td>
            <td></td>
          </tr>
          
           <tr>
            <td></td> 
            <td><%= f.submit "　　変更を保存　　",class:"btn btn-success" %></td>
            <td></td>
          </tr>
          <% end %>
        </tbody>
  　　　</table>
  　</div>
　</div>
</div>