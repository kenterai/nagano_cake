<div class="container px-md-0">
  <div class="row">
    <div class="col-md-4">
      <h5 class="text-center"><span class="bg-light">ジャンル編集</span></h5>
    </div>
  </div><br>
  
  <div class="row">  
    <div class="form-inline">
    　<%= form_with model:@genre,url:admin_genre_path,local:true do |f| %>
    　<div class="form-group">
    　  <label for="genre_name">ジャンル名</label>
    　  <%= f.text_field:name,class:"form-control genre_name", placeholder: "ジャンル名" %>
    　  <%= f.submit "変更を保存",class:"btn btn-success" %>
    　</div>
    　<% end %>
    </div>
  </div><br>
</div>