<div class="container px-md-0">
  <div class="row">
    <div class="col-md-4">
      <h5 class="text-center"><span class="bg-light">ジャンル一覧・追加</span></h5>
    </div>
  </div><br>
  
  <div class="row">  
    <div class="form-inline">
    　<%= form_with model:@genre,url:admin_genres_path,local:true do |f| %>
    　<div class="form-group">
    　  <label for="genre_name">ジャンル名</label>
    　  <%= f.text_field:name,class:"form-control genre_name", placeholder: "ジャンル名" %>
    　  <%= f.submit "新規登録",class:"btn btn-success" %>
    　</div>
    　<% end %>
    </div>
  </div><br>
      
  <div class="row">    
    <div class="col-md-4">  
      <table class="table">
        <thead class="bg-light">
          <tr>
            <th colspan="2"><div class="text-center">ジャンル</div></th>
            <td colspan="2"></td>
          </tr>
        </thead>
        
        <tbody>
        <% @genres.each do |genre| %>
          <tr>
            <td><%= genre.name %></td>
            <td></td>
            <td colspan="2"><div class="text-center"><%= link_to '編集する',edit_admin_genre_path(genre.id),class:"btn btn-success" %></div></td>
          </tr>
        <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>