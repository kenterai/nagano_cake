<h2>ジャンル一覧・追加</h2>
<%= form_with model:@genre,url:admin_genres_path,local:true do |f| %>
  <div class="form-group">
    <label for="genre_name">ジャンル名</label>
    <%= f.text_field:name,class:"form-control genre_name" %>
  </div>
  
  <div class="form-group">
    <%= f.submit "新規登録",class:"btn btn-success" %>
  </div>
<% end %>