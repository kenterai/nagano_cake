<div class="container px-md-0">
  <div class="row">
    <div class="col-md-4">
      <h5 class="text-center"><span class="bg-light">商品詳細</span></h5>
    </div>
  </div><br>

  <div class="row">
    <div class="col-md-4"><br>
      <%= image_tag @item.get_image("300x250") %>
    </div>
    <div class="col-md-4">
      <table class="table  table-borderless">
        <tbody>
          <tr>
            <td>商品名</td>
            <td><%= @item.name %></td>
          </tr>

          <tr>
            <td>商品説明</td>
            <td><%= @item.introduction %></td>
          </tr>

          <tr>
            <td>ジャンル</td>
            <td><%= @item.genre.name %></td>
          </tr>

          <tr>
            <td>税込価格<br>(税込価格)</td>
            <td><%= "#{@item.add_tax_price.to_s(:delimited)} (#{@item.price.to_s(:delimited)}) 円" %></td>
          </tr>

          <tr>
            <td>販売ステータス</td>
            <% if @item.is_active == true %>
            　<th class="text-success">販売中</th>
          　<% else %>
              <th　class="text-secondary">販売停止中</th>
          　<% end %>
          </tr>
        </tbody>
      </table>
    </div>
  </div>
  
  <div class="row">
    <div class="mx-auto"><%= link_to '編集する',edit_admin_item_path(@item.id),class:"btn btn-success" %></div>
  </div>
  
</div>
