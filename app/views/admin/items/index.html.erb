<div class="container px-md-0">
  <div class="row">
    <div class="col-md-4">
      <h5 class="text-center"><span class="bg-light">商品一覧</span></h5>
    </div>
    
    <div class="col-md-2 offset-md-6">
      <%= link_to "＋",new_admin_item_path,class:"btn btn-light rounded-circle p-0" %>
    </div>
  </div><br>
  
  <div class="row">    
    <table class="table">
      <thead class="bg-light">
        <tr>
          <th>商品ID</th>
          <th>商品名</th>
          <th>税抜価格</th>
          <th>ジャンル</th>
          <th>ステータス</th>
        </tr>
      </thead>
      
      <tbody>
      <% @items.each do |item| %>
        <tr>
          <td><%= item.id %></td>
          <td>
          <%= link_to admin_item_path(item.id) do %>
            <%= item.name %>
          <% end %>
          </td>
          <td><%= item.price %></td>
          <td><%= item.genre.name %></td>
          <th>
          <% if item.is_active == true %>
          　<span class="text-success">販売中</span>
          <% else %>
            <span　class="text-secondary">販売停止中</span>
          <% end %>
          </th>
        </tr>
      <% end %>
      </tbody>
    </table>
  </div>
</div>